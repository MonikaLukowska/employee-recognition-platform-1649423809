<h1>Kudos</h1>
<ul>
  <% kudos.each do |kudo| %>
    <li class="card" id="kudo_<%= kudo.id %>">
      <div class="card-header">
        Kudo for <%= kudo.receiver.email %>
      </div>
      <div class="card-body">
        <p class="card-text"><span class="font-weight-bold">Title: </span><%= kudo.title %></p>
        <p class="card-text"><span class="font-weight-bold">Content: </span><%= kudo.content %></p>
        <p class="card-text"><span class="font-weight-bold">Receiver: </span><%= kudo.receiver.email %></p>
        <p class="card-text"><span class="font-weight-bold">Giver: </span><%= kudo.giver.email %></p>
        <% if kudo.giver == current_employee %>
          <%= link_to 'Edit', edit_kudo_path(kudo) %> |
          <%= link_to 'Destroy', kudo, method: :delete, data: { confirm: 'Are you sure?' } %> 
        <% end %>
      </div>
    </li>
  <% end %>
</ul>
<%= link_to 'New Kudo', new_kudo_path, class: 'btn btn-primary' %>
