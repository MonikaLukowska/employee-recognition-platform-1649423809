<h1 class="text-center mb-3">Orders</h1>
<% if orders.empty? && !params[:status]%>
  <p  class="text-center" >You have not placed any orders yet</p>
<% else  %>
  <div class="d-flex justify-content-center w-100 mb-4 gap-3 nav-pills">
    <span class='btn btn-link <%= OrdersDecorator.new(params,'all').current? %>'><%= link_to 'All orders', orders_path, class:'text-decoration-none text-dark' %></span>
    <span class='btn btn-link <%= OrdersDecorator.new(params,'delivered').current? %>'><%= link_to 'Delivered', orders_path(status: :delivered), class: 'text-decoration-none text-dark' %></span>
    <span class='btn btn-link <%= OrdersDecorator.new(params,'undelivered').current?  %>'><%= link_to 'Not delivered', orders_path(status: :undelivered), class: 'text-decoration-none text-dark' %>
  </div>
<% end %>
<ul>
  <% orders.each do |order| %>
    <li class="card mb-2" test_id="order_<%= order.id %>">
      <div class="card-header">
        Transaction date: <%= order.created_at.strftime('%d-%m-%Y') %>
      </div>
      <div class="card-body">
        <p class="card-text"><span class="font-weight-bold">Reward title: </span><%= order.reward_snapshot.title %></p>
        <p class="card-text"><span class="font-weight-bold">Reward description: </span><%= order.reward_snapshot.description %></p>
        <p class="card-text"><span class="font-weight-bold">Reward price: </span><%= order.purchase_price %></p>
      </div>
    </li>
  <% end %>
</ul>
